<%= form_with model: [:admin, @promote], local: true do |f| %>
  <%= f.text_field :code %>
  <%= f.text_field :name %>
  <%= f.select :scope, options_for_select(Promote.options_i18n(:scope), @promote.scope) %>
  <%= f.datetime_field :start_at %>
  <%= f.datetime_field :finish_at %>
  <%= f.submit %>
<% end %>


