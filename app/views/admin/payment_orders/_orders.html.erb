<tr id="unchecked_<%= order.id %>">
  <td>
    <%= order.id %>
    <%= form_with url: admin_payment_payment_orders_path(@payment), id: "new_payment_#{order.id}" do |f| %>
    <% end %>
  </td>
  <td><%= order.amount %></td>
  <td>
    <%= hidden_field_tag 'payment_order[order_id]', order.id, form: "new_payment_#{order.id}" %>
    <%= number_field_tag 'payment_order[check_amount]', order.unreceived_amount, placeholder: 'Result:', class: 'three wide field', step: '0.01', form: "new_payment_#{order.id}" %>
  </td>
  <td>
    <%= submit_tag '核销', form: "new_payment_#{order.id}" %>
  </td>
</tr>