<tr id="serve_<%= serve_charge.serve_id %>">
  <td><%= serve_charge.item.name %></td>
  <td><%= serve_charge.default_subtotal %></td>
  <td><%= serve_charge.subtotal %></td>
  <td>
    <%= link_to 'edit', new_admin_good_serve_path(@good.class.name, @good.id, serve_id: serve_charge.serve_id), remote: true, class: 'ui label' %>
    <% if serve_charge.good_serve  %>
      <%= link_to 'remove', admin_good_serve_path(@good.class.name, @good.id, serve_charge.good_serve.id), method: :delete, remote: true, class: 'ui label' %>
    <% elsif @good_serve  %>
      <%= link_to 'remove', admin_good_serve_path(@good.class.name, @good.id, @good_serve.id), method: :delete, remote: true, class: 'ui label' %>
    <% end %>
  </td>
</tr>


