<%= search_form_with scope: :q do |f| %>
  <div class="fields">
    <%= f.select :id, options_for_select([]), { on: { wrapper_input: false } }, { id: 'q_buyer_id', class: 'ui search dropdown' } %>
    <%= f.collection_select :payment_strategy_id, PaymentStrategy.all, :id, :name, { prompt: 'Credit Terms' }, { class: 'ui dropdown' } %>
    <%= f.collection_select :'crm_permits.manager_id', @managers, :id, :name, { prompt: 'AR' }, { class: 'ui dropdown' } %>
    <%= f.date_field :'overdue_date-lte' %>
    <%= f.submit 'Search' %>
    <%= link_to 'Clear All Filters', filter_params(only: [:buyer_id]), class: 'ui white button' %>
  </div>
<% end %>

