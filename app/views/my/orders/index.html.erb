<div class="ui grid page">
  <div class="four wide column">
    <%= render 'my/base/nav' %>
  </div>

  <div class="twelve wide column">
    <h1>订单列表</h1>

    <table class="ui table">
      <thead>
      <tr>
        <th>订单号</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.amount %></td>
          <td>
            <% if order.payment_status != 'all_paid' %>
              <%= link_to 'pay', pay_my_order_path(order), method: :patch %>
            <% end %>
          </td>
          <td><%= link_to 'Show', my_order_path(order) %></td>
          <td><%= link_to 'Edit', edit_my_order_path(order) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>





