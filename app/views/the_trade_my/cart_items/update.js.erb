$("#total_subtotal_<%= @cart_item.id %>").html('<%= @cart_item.total_subtotal %>');

<% if @cart_item.discount_subtotal < 0 %>
  $("#discount_subtotal_<%= @cart_item.id %>").html('<%= @cart_item.discount_subtotal %>');
<% else %>
  $("#discount_subtotal_<%= @cart_item.id %>").html('');
<% end %>

$('#total_subtotal').html('<%= @additions.total_subtotal %>');
$('#discount_subtotal').html('<%= @additions.discount_subtotal %>');
$('#subtotal').html('<%= @additions.subtotal %>');