<div class="ui segment top attached">
  <%= link_to 'Add New', new_my_payment_method_path, remote: true, class: 'ui teal button' %>
</div>

<table class="ui bottom attached table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Account Name</th>
    <th>Account Num</th>
    <th>Bank</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody id="payment_method_tbody">
  <% @payment_methods.each do |payment_method| %>
    <%= render partial: 'item', locals: { payment_method: payment_method } %>
  <% end %>
  </tbody>
</table>
