<!DOCTYPE html>
<html>
  <head>
    <title>RailsTrade Management</title>
    <%= stylesheet_link_tag 'admin/application' %>
    <%= javascript_include_tag 'admin/application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <%= render 'admin/nav_bar' %>
    <%= render 'shared/alert' %>

    <div class="ui invisible side">
      <div class="sidebar">
        <%= render 'trade/admin/base/nav' %>
      </div>
      <div class="content">
        <%= yield %>
      </div>
    </div>

    <%= js_load(root: RailsTrade::Engine.root) %>
  </body>
</html>
