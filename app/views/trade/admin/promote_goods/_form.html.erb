<%= form_with model: [:admin, @promote_good], local: true do |f| %>
  <%= render '/shared/error_messages', target: @promote_good  %>
  <%= f.hidden_field :promote_id %>
  <%= f.select :good_type, options_for_select(PromoteGood.good_types), include_blank: true %>
  <%= f.select :good_id, options_for_select([]) %>
  <%= f.submit %>
<% end %>
